@using NotesOrganizer.Web.ViewModels
@model NoteViewModel

<h1 class="text-center"> Notatki </h1>

<form asp-action="AddNote" method="post">

    <input asp-for="@Model.Note.Title" />
    <input asp-for="@Model.Note.Content" />
    <input type="submit" value="Dodaj notatkę">

</form>

<table class="table table-striped mt-5" style="table-layout: fixed; width: 100%">
    
    <thead>
        <tr>
            <th scope="col"> Tytuł </th>
            <th scope="col"> Treść </th>
            <th scope="col"> Akcje </th>
        </tr>
    </thead>
    
    @foreach (var element in Model.AllNotes)
    {
        <tbody>
            <tr>
                <td> @element.Title  </td>
                <td> @element.Content </td>
                <td>
                    <a asp-action="NoteForm" asp-route-id="@element.Id"> Edytuj </a>
                    <a asp-action="DeleteNote" asp-route-id="@element.Id"> Usuń </a>
                </td>
            </tr>
        </tbody>
    }

</table>